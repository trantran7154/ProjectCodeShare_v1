@using CodeShare.Model.EF;
@using CodeShare.Frontend.Functions;
@model List<Pakage>
@{
    DataShareCodeEntities db = new DataShareCodeEntities();
    ViewBag.Title = "Nạp xu";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var co = new FunctionsController();
    var id = co.CookieID();
    var coin = id.user_coin * 1000;

}

<div class="home" style=" height: 250px">
    <div class="home_background parallax-window" data-parallax="scroll" style="background-image: url('../../Images/Codes/blue-dark-background-brightness-megaphone-set-windows-web-programming-language-codes-gears-vector-illustration-111990452.jpg');" ></div>
</div>
<div class="testimonials" style="background-color: #f0f0f0; font-family: Roboto,Arial,sans-serif;padding-top: 22px;" ng-app="myApp">
    <div class="test_border"></div>
    <div class="container" style="max-width: 1300px" ng-controller="myCtrl">
        <div class="row">
            <div class="col-lg-8 bg-white border shadow text-dark">
                <div style="padding: 10px; font-size: 16px">
                    <h6 class="font-weight-bold text-success" style="color: black; font-size: 25px">NẠP TIỀN VÀO TÀI KHOẢN</h6>
                    <div class="border">
                        <center style="padding: 20px">
                            <i class="fa fa-user">&nbsp;</i> @id.user_name [Mã USER-@id.user_id] &nbsp;&nbsp;
                            <i class="fa fa-envelope">&nbsp;</i> @id.user_email &nbsp;&nbsp;
                            <i class="fa fa-bitcoin">&nbsp;</i> Tài khoản: @id.user_coin Xu &nbsp;&nbsp;
                            <i class="fa fa-bitcoin">&nbsp;</i> Số tiền từ xu: @coin.Value.ToString("#,##0") VNĐ &nbsp;&nbsp;
                        </center>
                    </div>
                    <nav class="mt-3">
                        <div class="nav nav-tabs" id="nav-tab" role="tablist">
                            <a class="nav-link active font-weight-bold" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">VÍ ĐIỆN TỬ</a>
                            <a class="nav-link font-weight-bold" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">THANH TOÁN CHUYỂN KHOẢN</a>
                        </div>
                    </nav>
                    <div class="tab-content" id="nav-tabContent">
                        <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                            <p class="mt-3 text-dark font-weight-bold">
                                <b><i class="fa fa-bell-o text-warning font-weight-bold">&nbsp;</i>Xu là gì? </b> <b>Xu dùng để giao dịch mua code và có thể rút tiền lại khi buôn bán có xu thành công. Xu không lạm phát và tương ứng với mức 1.000 VNĐ tương ứng với 1 Xu.</b>
                            </p>
                            <div class="mt-4">
                                <div class="row">
                                    <!-- Trending Item -->
                                    @foreach (var item in Model)
                                    {
                                        var sum = item.pakage_coin * 1000;
                                        <div class="col-lg-4">
                                            <div class="clearfix border shadow mb-4">
                                                <div style="padding: 20px" class="mb-2">
                                                    <div class="trending_image"><img src="https://developers.momo.vn/images/logo.png" alt=""></div>
                                                    <div class="trending_content" style="margin-top: 5%">
                                                        <div class="trending_title"><a href="#">@sum.Value.ToString("#,###") vnđ</a></div>
                                                        <div class="trending_price" style="color: red">@item.pakage_coin Xu</div>
                                                        <div style="cursor: pointer" onclick="window.location.href = '@Url.Action("Details","Pays", new { id = item.pakege_id })'" class="trending_location font-weight-bold text-primary">Nạp ngay</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="mt-3 alert alert-success">
                                1. Chọn số xu muốn nạp. (Chọn các mức nạp, nếu mún nạp tùy ý có thể chọn hình thức cuối cùng) <br />
                                2. Xác nhận thanh toán. (Xem đơn hàng và giá tiền để xác nhận thanh toán) <br />
                                3. Quét QR Code Momo. (Tải app MOMO và tiến thành quét Qr)<br />
                                4. Xác nhận thanh toán. (Xác nhận số tiền từ app và thanh toán)<br />
                                5. Cộng xu thành công. (Thành công nạp xu)<br />
                            </div>
                        </div>
                        <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                            <div class="container mt-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="card-title font-weight-bold">THANH TOÁN QUA NGÂN HÀNG BIDV</h4>
                                        <img src="~/Images/Codes/bidv-png-bidv-ngan-hang-u-t-va-phat-tri-n-vi-t-nam-slogan-946.png" height="100" />
                                        <br />
                                        <b>Họ tên: Vương Bảo Trân</b>
                                        <br />
                                        <b>Số tài khoản: 65010002736956</b>
                                        <div class="mt-4">
                                            <div class="alert alert-danger text-center" role="alert">
                                                <h4>Sau đó nhập số tiền muốn nạp và nhập lời nhắn cho người nhận là:</h4>
                                                <h3 class="font-weight-bold">NẠP XU</h3>
                                                <em>(Trong đó sha 390364 để xác định tài khoản của bạn, Hệ thống sẽ cộng tiền vào tài khoản này cho bạn)</em>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 bg-white border shadow">
                @Html.Action("All", "View")
            </div>
        </div>
    </div>
</div>
<script>
    var app = angular.module('myApp', []);
    app.controller('myCtrl', function ($scope, $http) {
        $http({
            method: "GET",
            url: "/Json/Codes"
        }).then(function mySuccess(response) {
            $scope.list = response.data;
            $scope.count = $scope.list.length;
        }, function myError(response) {
            $scope.list = response.statusText;
        });
    });
</script>

