                                </div>
                                <p class="footer_about_text">THANH TOÁN QUA:</p>
                                <img src="~/Content/Layout/images/b11.png" />
                                <img class="ml-3" style="background-color: whitesmoke; padding: 4px" src="~/Content/Layout/images/b7.png" />
                            </div>
                        </div>
                    </div>
                    <!-- Footer Column -->
                    <div class="col-lg-3 footer_column">
                        <div class="footer_col">
                            <div class="footer_title">tin tức nổi bật</div>
                            <div class="footer_content footer_blog">
                                <!-- Footer blog item -->
                                @foreach (var item in news.Where(n => n.news_active == 1 && n.news_del == false && n.news_active == 1 && n.news_option == true).OrderByDescending(n => n.news_datecreate).Take(3))
                                {
                                    <div class="footer_blog_item clearfix">
                                        <div class="footer_blog_image"><img src="~/Images/News/@item.news_img" style="width: 60px; height: 60px" alt="@item.news_name"></div>
                                        <div class="footer_blog_content">
                                            <div class="footer_blog_title fix-line-css"><a href="@Url.Action("Details","News", new { id = item.news_id })">@item.news_name</a></div>
                                            <i class="fa fa-bookmark text-warning"></i>
                                            @{
                                                var count = item.Groups.Count();
                                                var countgr = 0;
                                            }
                                            @foreach (var lang in item.Groups)
                                            {
                                                countgr++;
                                                if (count == countgr)
                                                {
                                                    <b style="position: inherit; color: white">@lang.Category.category_name</b>
                                                }
                                                else
                                                {
                                                    <b style="position: inherit; color: white">@lang.Category.category_name |</b>
                                                }
                                            }
                                            <div style="color: white; font-weight: 600"><i class="fa fa-calendar text-success"></i> @item.news_datecreate.Value.ToShortDateString()</div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <!-- Footer Column -->
                    <div class="col-lg-3 footer_column">
                        <div class="footer_col">
                            <div class="footer_title">Danh Mục</div>
                            <div class="footer_content footer_tags">
                                <ul class="tags_list clearfix">
                                    @foreach (var item in categorys.Where(n => n.category_active == true && n.category_item == 1).Take(10))
                                    {
                                        <li class="tag_item"><a href="#">@item.category_name</a></li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- Footer Column -->
                    <div class="col-lg-3 footer_column">
                        <div class="footer_col">
                            <div class="footer_title">liên hệ</div>
                            <div class="footer_content footer_contact">
                                <ul class="contact_info_list">
                                    <li class="contact_info_item d-flex flex-row">
                                        <div><div class="contact_info_icon"><img src="~/Content/Layout/images/placeholder.svg" alt=""></div></div>
                                        <div class="contact_info_text">06 Trần Văn Ơn, Phú Hoà, Thủ Dầu Một, Bình Dương</div>
                                    </li>
                                    <li class="contact_info_item d-flex flex-row">
                                        <div><div class="contact_info_icon"><img src="~/Content/Layout/images/phone-call.svg" alt=""></div></div>
                                        <a href="tel:+84 869 139 879" class="contact_info_text">+84 869 139 879</a>
                                    </li>
                                    <li class="contact_info_item d-flex flex-row">
                                        <div><div class="contact_info_icon"><img src="~/Content/Layout/images/message.svg" alt=""></div></div>
                                        <div class="contact_info_text"><a href="mailto: vuongbaot1905@gmail.com" target="_top">vuongbaot1905@gmail.com</a></div>
                                    </li>
                                    <li class="contact_info_item d-flex flex-row">
                                        <div><div class="contact_info_icon"><img src="~/Content/Layout/images/planet-earth.svg" alt=""></div></div>
                                        <div class="contact_info_text"><a href="mailto: 1724801030160@student.tdmu.edu.vn">1724801030160@student.tdmu.edu.vn</a></div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
