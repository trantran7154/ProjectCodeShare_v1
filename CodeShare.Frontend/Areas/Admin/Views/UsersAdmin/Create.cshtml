@using CodeShare.Model.EF
@model CodeShare.Model.EF.User

@{
    ViewBag.Title = "Thêm người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    DataShareCodeEntities db = new DataShareCodeEntities();
}

<div class="col-xl-12 col-md-12">
    <div class="card table-card">
        <div class="card-header">
            <h5>@ViewBag.Title</h5>
            <div class="card-header-right">
                <a href="/Admin/CodesAdmin/Index" class="font-weight-bold mr-4">
                    <i class="fa fa-long-arrow-left text-primary"></i>TRỞ VỀ
                </a>
            </div>
        </div>
        <div class="card-block">
            <div class="table-responsive container-fluid">
                <form method="post" action="@Url.Action("Create","UsersAdmin")" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div class="modal-body">
                        <div class="ui form">
                            <div class="three fields">
                                <div class="field">
                                    <label><i class="fa fa-user"></i> Tên người dùng</label>
                                    <input type="text" name="user_name" />
                                </div>
                                <div class="field">
                                    <label><i class="fa fa-money"></i> Tài khoản khả dụng</label>
                                    <input type="text" name="user_coin" />
                                </div>
                                <div class="field">
                                    <label><i class="fa fa-key"></i> Vai trò</label>
                                    <select class="ui fluid dropdown" name="user_role">
                                        <option value="1">Admin</option>
                                        <option value="2">Người dùng</option>
                                    </select>
                                </div>
                            </div>
                            <div class="two fields">
                                <div class="field">
                                    <label><i class="fa fa-envelope"></i> Email</label>
                                    <input type="text" name="user_email" />
                                </div>
                                <div class="field">
                                    <label><i class="key icon"></i> Mật khẩu</label>
                                    <input type="text" name="user_pass" />
                                </div>
                            </div>
                            <div class="two fields">
                                <div class="field">
                                    <label><i class="fa fa-image"></i> Ảnh đại diện</label>
                                    <input type="file" name="img" />
                                </div>
                                <div class="field">
                                    <label><i class="fa fa-phone"></i> Số điện thoại</label>
                                    <input type="text" name="user_phone" />
                                </div>
                            </div>
                            <div class="two fields">
                                <div class="field">
                                    <label><i class="fa fa-venus-mars font-weight-bold"></i> Giới tính</label>
                                    <select class="ui fluid dropdown" name="user_sex">
                                        <option value="true">Nam</option>
                                        <option value="false">Nữ</option>
                                    </select>
                                </div>
                                <div class="field">
                                    <label><i class="fa fa-calendar"></i> Ngày sinh</label>
                                    <input type="date" name="user_birth" />
                                </div>
                            </div>
                            <div class="two fields">
                                <div class="field">
                                    <label><i class="fa fa-code font-weight-bold"></i> Code</label>
                                    <input type="text" name="user_code" />
                                </div>
                                <div class="field">
                                    <label><i class="fa fa-heart-o font-weight-bold"></i> Sở thích</label>
                                    <input type="text" name="user_fa" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="actions modal-footer">
                        <button type="submit" class="ui positive right labeled icon button">
                            Thêm
                            <i class="checkmark icon"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


