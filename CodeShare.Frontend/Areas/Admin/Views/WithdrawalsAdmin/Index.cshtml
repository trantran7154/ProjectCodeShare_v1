
@{
    ViewBag.Title = "DANH SÁCH RÚT TIỀN";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" ng-app="myApp">
    <div class="min-height-200px" ng-controller="myCtrl">
        <div class="page-header">
            <div class="clearfix">
                <div class="pull-left">
                    <div class="ui inverted left icon input">
                        <input type="text" placeholder="Nhập từ khóa cần tìm..." ng-model="searchText.name">
                        <i class="search icon"></i>
                    </div>
                </div>
            </div>
            <div class="mt-3 mb-4" style="border-bottom: 1.5px solid black"></div>
            <div class="ui">
                <h5 class="mb-3 text-primary">TÌM KIẾM NÂNG CAO</h5>
                <div style="padding-left: 23%">
                    <table>
                        <tr>
                            <td class="pl-4">
                                <select class="ui fluid dropdown" ng-model="searchSort">
                                    <option value="searchText">Sắp xếp mặc định</option>
                                    <option value="searchText">Mặc định</option>
                                    <option value="name">Chữ cái</option>
                                    <option value="datecreate">Cũ nhất</option>
                                    <option value="searchText">Mới nhất</option>
                                </select>
                            </td>
                            <td class="pl-4">
                                <div class="ui radio checkbox mt-3">
                                    <input type="radio" name="Withdrawal_active" ng-model="searchText.active" value="true">
                                    <label>Hoạt động</label>
                                </div>
                            </td>
                            <td class="pl-4">
                                <div class="ui radio checkbox mt-3">
                                    <input type="radio" name="Withdrawal_active" ng-model="searchText.active" value="false">
                                    <label>Ngừng hoạt động</label>
                                </div>
                            </td>
                            <td class="pl-4">
                                <div class="ui radio checkbox mt-3">
                                    <input type="radio" name="Withdrawal_option" ng-model="searchText.option" value="true">
                                    <label>Hiển thị</label>
                                </div>
                            </td>
                            <td class="pl-4">
                                <div class="ui radio checkbox mt-3">
                                    <input type="radio" name="Withdrawal_option" ng-model="searchText.option" value="false">
                                    <label>Không hiển thị</label>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <!-- basic table  Start -->
        <div class="pd-20 card-box mb-30">
            <div class="clearfix mb-20">
                <div class="pull-left">
                    <h4 class="h4">
                        CÓ TỔNG CỘNG <span style="color: red">{{(list | filter:searchText).length}}</span> YÊU CẦU RÚT TIỀN
                    </h4>
                </div>
            </div>
            <table class="table table-bordered text-center">
                <thead>
                    <tr>
                        <th scope="col"><i class="fa fa-user"></i> Tên Người Dùng</th>
                        <th scope="col"><i class="icon-copy dw dw-money-2 font-weight-bold"></i> Số Xu</th>
                        <th scope="col"><i class="fa fa-calendar"></i> Ngày Tạo</th>
                        <th scope="col"><i class="fa fa-history"></i> Ngày Cập Nhật</th>
                        <th scope="col"><i class="fa fa-toggle-on"></i> Hoạt Động</th>
                        <th scope="col"><i class="fa fa-magic"></i> Tùy Chọn</th>
                        <th scope="col"><i class="fa fa-cog"></i> Công Cụ</th>
                    </tr>
                </thead>
                <tbody ng-show="(list | filter:searchText).length != 0">
                    <tr ng-repeat="list in list | filter: searchText | orderBy: searchSort">
                        <th scope="row">{{list.user_name}}</th>
                        <th scope="row">{{list.coin}} Xu</th>
                        <td>{{list.datecreate | date: "dd/MM/yyyy"}}</td>
                        <td>{{list.update | date: "dd/MM/yyyy"}}</td>
                        <th scope="col">
                            <div ng-show="list.active == true">
                                <span class="badge badge-success" ng-click="active(list.id)" style="cursor: pointer">Hoạt Động</span>
                            </div>
                            <div ng-show="list.active == false">
                                <span class="badge badge-danger" ng-click="active(list.id)" style="cursor: pointer">Không Hoạt Động</span>
                            </div>
                        </th>
                        <th>
                            <div ng-show="list.option == true">
                                <span class="badge badge-success" ng-click="option(list.id)" style="cursor: pointer">Hiển Thị</span>
                            </div>
                            <div ng-show="list.option == false">
                                <div class="ui toggle">
                                    <span class="badge badge-danger" ng-click="option(list.id)" style="cursor: pointer">Không Hiển Thị</span>
                                </div>
                            </div>
                        </th>
                        <td><a href="" data-toggle="modal" data-target="#details_{{list.id}}"><i class="fa fa-eye"></i></a> | <a href="" data-toggle="modal" data-target="#edit_{{list.id}}"><i class="fa fa-check-circle-o"></i></a>
                    </tr>
                </tbody>
                <tbody ng-show="(list | filter:searchText).length == 0">
                    <tr>
                        <th colspan="7" class="text-center font-weight-bolder"><i class="fa fa-ban" style="color: red"></i> CHƯA CÓ DỮ LIỆU</th>
                    </tr>
                </tbody>
            </table>
        </div>
        <!-- basic table  End -->
        <!-- Modal xem chi tiết -->
        <div class="row clearfix">
            <!-- Large modal -->
            <div class="col-md-4 col-sm-12 mb-30" ng-repeat="list in list">
                <div class="modal fade bs-example-modal-lg" id="details_{{list.id}}" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title" id="myLargeModalLabel"><i class="fa fa-eye"></i> CHI TIẾT NGƯỜI DÙNG RÚT TIỀN</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                            </div>
                            <div class="modal-body">
                                <form class="ui form">
                                    <div class="fields two">
                                        <div class="field">
                                            <label><i class="fa fa-user"></i> Tên đăng nhập</label>
                                            <input type="text" value="{{list.user_name}}" />
                                        </div>
                                        <div class="field">
                                            <label><i class="fa fa-envelope-o"></i> Email</label>
                                            <input type="text" value="{{list.email}}" />
                                        </div>
                                    </div>
                                    <div class="field">
                                        <label><i class="fa fa-phone font-weight-bold"></i> Số điện thoại</label>
                                        <input type="text" value="{{list.tel}}" />
                                    </div>
                                    <div class="fields two">
                                        <div class="field">
                                            <label><i class="icon-copy dw dw-money-2 font-weight-bold"></i> Số Xu</label>
                                            <input type="text" value="{{list.coin}} Xu" />
                                        </div>
                                        <div class="field">
                                            <label><i class="fa fa-money"></i> Tiền Nhận</label>
                                            <input type="text" value="{{list.coin * 1000 | currency:'':0}} VNĐ" />
                                        </div>
                                    </div>
                                    <div class="fields two">
                                        <div class="field">
                                            <label><i class="fa fa-toggle-on"></i> Hoạt động</label>
                                            <select class="ui fluid dropdown" name="Withdrawal_active" ng-show="list.active == true">
                                                <option value="true">Hoạt động</option>
                                            </select>
                                            <select class="ui fluid dropdown" name="Withdrawal_active" ng-show="list.active == false">
                                                <option value="flase">Không hoạt động</option>
                                            </select>
                                        </div>
                                        <div class="field">
                                            <label><i class="fa fa-magic"></i> Tùy chọn</label>
                                            <select class="ui fluid dropdown" name="Withdrawal_option" ng-show="list.option == true">
                                                <option value="true">Hiển thị</option>
                                            </select>
                                            <select class="ui fluid dropdown" name="Withdrawal_active" ng-show="list.option == false">
                                                <option value="flase">Không hiển thị</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="fields two">
                                        <div class="field">
                                            <label><i class="fa fa-calendar"></i> Ngày tạo</label>
                                            <input type="date" value="{{list.datecreate}}" />
                                        </div>
                                        <div class="field">
                                            <label><i class="fa fa-history"></i> Ngày cập nhật</label>
                                            <input type="date" value="{{list.update}}" />
                                        </div>
                                    </div>
                                    <div class="ui error message">
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <div class="ui black deny button" data-dismiss="modal">
                                    Đóng
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- // Modal xem chi tiết-->
        </div>
    </div>
</div>
<!-- Success modal -->
<div class="modal" tabindex="-1" id="bin">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body text-center font-18">
                <h3 class="mb-20">Xóa Thành Công</h3>
                <div class="mb-30 text-center"><img src="~/Content/LayoutAdmin/vendors/images/success.png"></div>
                Dữ liệu đã được chuyển vào thùng rác!
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-primary" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>

<script>
    var app = angular.module('myApp', ['ngSanitize']);
    app.controller('myCtrl', function ($scope, $http) {
        $http({
            method: "GET",
            url: "/JsonAdmin/Withdrawals?del="
        }).then(function mySuccess(response) {
            $scope.list = response.data;
            // Active
            $scope.active = function (id) {
                $http.get("/Admin/WithdrawalsAdmin/ActiveWidthdrawal?id=" + id)
                    .then(function (response) {
                        $scope.list = response.data;
                    });
            }
            // Option
            $scope.option = function (id) {
                $http.get("/Admin/WithdrawalsAdmin/OptionWidthdrawal?id=" + id)
                    .then(function (response) {
                        $scope.list = response.data;
                    });
            }
            // Sort
            $scope.searchSort = "datecreate";
            $scope.searchSort = "name";
            $scope.searchSort = "searchText";
        }, function myError(response) {
            $scope.list = response.statusText;
        });
    });
</script>

