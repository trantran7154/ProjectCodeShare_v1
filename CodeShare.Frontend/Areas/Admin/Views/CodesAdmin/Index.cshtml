@using CodeShare.Model.EF
@model List<Codes>

@{
    ViewBag.Title = "DANH SÁCH CODE";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    CodeShareDataEntities db = new CodeShareDataEntities();
}

@{
    List<Forms> forms = db.Forms.ToList();
}

<div class="container-fluid" ng-app="myApp">
    <div class="min-height-200px" ng-controller="myCtrl">
        <div class="page-header">
            <div class="clearfix">
                <div class="pull-left">
                    <div class="ui inverted left icon input">
                        <input type="text" placeholder="Nhập từ khóa cần tìm..." ng-model="searchText.name">
                        <i class="search icon"></i>
                    </div>
                </div>
                <div class="pull-right">
                    <a href="@Url.Action("IndexBin","CodesAdmin")" class="btn btn btn-outline-success btn-sm scroll-click font-weight-bold" style="border: 2px solid #28a745"><i class="fa fa-trash" style="font-size: 18px"></i></a>
                    <a href="#" class="btn btn btn-outline-danger btn-sm scroll-click font-weight-bold" data-toggle="modal" data-target="#code_add" style="border: 2px solid #DC3545"><i class="fa fa-plus-circle" style="font-size: 16px"></i> Thêm Bài Viết</a>
                </div>
            </div>
            <div class="mt-3 mb-4" style="border-bottom: 1.5px solid black"></div>
            <div class="ui">
                <h5 class="mb-3 text-primary">TÌM KIẾM NÂNG CAO</h5>
                <div style="padding-left: 23%">
                    <table>
                        <tr>
                            <td class="pl-4">
                                <select class="ui fluid dropdown" ng-model="searchSort">
                                    <option value="searchText">Sắp xếp mặc định</option>
                                    <option value="searchText">Mặc định</option>
                                    <option value="name">Chữ cái</option>
                                    <option value="datecreate">Cũ nhất</option>
                                    <option value="searchText">Mới nhất</option>
                                </select>
                            </td>
                            <td class="pl-4">
                                <div class="ui radio checkbox mt-3">
                                    <input type="radio" name="course_active" ng-model="searchText.active" value="true">
                                    <label>Hoạt động</label>
                                </div>
                            </td>
                            <td class="pl-4">
                                <div class="ui radio checkbox mt-3">
                                    <input type="radio" name="course_active" ng-model="searchText.active" value="false">
                                    <label>Ngừng hoạt động</label>
                                </div>
                            </td>
                            <td class="pl-4">
                                <div class="ui radio checkbox mt-3">
                                    <input type="radio" name="course_option" ng-model="searchText.option" value="true">
                                    <label>Hiển thị</label>
                                </div>
                            </td>
                            <td class="pl-4">
                                <div class="ui radio checkbox mt-3">
                                    <input type="radio" name="course_option" ng-model="searchText.option" value="false">
                                    <label>Không hiển thị</label>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <!-- basic table  Start -->
        <div class="pd-20 card-box mb-30">
            <div class="clearfix mb-20">
                <div class="pull-left">
                    <h4 class="h4">
                        CÓ TỔNG CỘNG <span style="color: red">{{(list | filter:searchText).length}}</span> CODE
                    </h4>
                </div>
            </div>
            <table class="table table-bordered text-center">
                <thead>
                    <tr>
                        <th scope="col"><i class="fa fa-image"></i> Ảnh</th>
                        <th scope="col"><i class="fa fa-code font-weight-bold"></i> Tên Code</th>
                        <th scope="col"><i class="fa fa-money"></i> Giá</th>
                        <th scope="col"><i class="fa fa-calendar"></i> Ngày Tạo</th>
                        <th scope="col"><i class="fa fa-history"></i> Ngày Cập Nhật</th>
                        <th scope="col"><i class="fa fa-toggle-on"></i> Hoạt Động</th>
                        <th scope="col"><i class="fa fa-magic"></i> Tùy Chọn</th>
                        <th scope="col"><i class="fa fa-cog"></i> Công Cụ</th>
                    </tr>
                </thead>
                <tbody ng-show="(list | filter:searchText).length != 0">
                    <tr ng-repeat="list in list | filter: searchText | orderBy: searchSort">
                        <th scope="row">
                            <img src="~/Images/Codes/{{list.img}}" height="80" width="80" />
                        </th>
                        <th scope="row">{{list.name}}</th>
                        <th scope="row">{{list.coin}} Xu</th>
                        <td>{{list.datecreate | date: "dd/MM/yyyy"}}</td>
                        <td>{{list.update | date: "dd/MM/yyyy"}}</td>
                        <th scope="col">
                            <div ng-show="list.active == true">
                                <span class="badge badge-success" ng-click="active(list.id)" style="cursor: pointer">Hoạt Động</span>
                            </div>
                            <div ng-show="list.active == false">
                                <span class="badge badge-danger" ng-click="active(list.id)" style="cursor: pointer">Không Hoạt Động</span>
                            </div>
                        </th>
                        <th>
                            <div ng-show="list.option == true">
                                <span class="badge badge-success" ng-click="option(list.id)" style="cursor: pointer">Hiển Thị</span>
                            </div>
                            <div ng-show="list.option == false">
                                <div class="ui toggle">
                                    <span class="badge badge-danger" ng-click="option(list.id)" style="cursor: pointer">Không Hiển Thị</span>
                                </div>
                            </div>
                        </th>
                        <td><a href="" data-toggle="modal" data-target="#details_{{list.id}}"><i class="fa fa-eye"></i></a> | <a href="" data-toggle="modal" data-target="#edit_{{list.id}}"><i class="fa fa-pencil"></i></a> | <a ng-click="del(list.id)"><i class="fa fa-trash"></i></a></td>
                    </tr>
                </tbody>
                <tbody ng-show="(list | filter:searchText).length == 0">
                    <tr>
                        <th colspan="8" class="text-center font-weight-bolder"><i class="fa fa-ban" style="color: red"></i> CHƯA CÓ DỮ LIỆU</th>
                    </tr>
                </tbody>
            </table>
