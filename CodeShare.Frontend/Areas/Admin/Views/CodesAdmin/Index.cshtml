@model IEnumerable<CodeShare.Model.EF.Code>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-xl-12 col-md-12">
    <div class="card table-card">
        <div class="card-header">
            <h5>Member’s performance</h5>
            <div class="card-header-right">
                <ul class="list-unstyled card-option">
                    <li><i class="fa fa fa-wrench open-card-option"></i></li>
                    <li><i class="fa fa-window-maximize full-card"></i></li>
                    <li><i class="fa fa-minus minimize-card"></i></li>
                    <li><i class="fa fa-refresh reload-card"></i></li>
                    <li><i class="fa fa-trash close-card"></i></li>
                </ul>
            </div>
        </div>
        <div class="card-block">
            <div class="table-responsive">

                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.code_title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.code_coin)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.code_code)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.code_datecreate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.code_dateupdate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.code_active)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.code_option)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.code_del)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.code_tag)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.code_disk)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.code_pass)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.code_img)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Category.category_name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.User.user_email)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.code_title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.code_coin)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.code_code)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.code_datecreate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.code_dateupdate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.code_active)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.code_option)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.code_del)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.code_tag)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.code_disk)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.code_pass)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.code_img)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Category.category_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.user_email)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.code_id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.code_id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.code_id })
                            </td>
                        </tr>
                    }

                </table>


            </div>
        </div>
    </div>
</div>
