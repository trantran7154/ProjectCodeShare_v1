<script>
    var app = angular.module('myApp', []);
    app.controller('myCtrl', function ($scope, $http) {
        $http({
            method: "GET",
            url: "/JsonAdmin/Codes?del="
        }).then(function mySuccess(response) {
            $scope.list = response.data;
            // Edit
            $scope.edit = function (id) {
                $http.get("/Admin/CodesAdmin/EditCode?id=" + id)
                    .then(function (response) {
                        $scope.list = response.data;
                    });
            }
            // Bin
            $scope.del = function (id) {
                $http.get("/Admin/CodesAdmin/BinCode?id=" + id)
                    .then(function (response) {
                        $scope.list = response.data;
                        $(document).ready(function () {
                            $('#bin').modal('show');
                        })
                    });
            }
            // Active
            $scope.active = function (id) {
                $http.get("/Admin/CodesAdmin/ActiveCode?id=" + id)
                    .then(function (response) {
                        $scope.list = response.data;
                    });
            }
            // Option
            $scope.option = function (id) {
                $http.get("/Admin/CodesAdmin/OptionCode?id=" + id)
                    .then(function (response) {
                        $scope.list = response.data;
                    });
            }
            // Search
            $scope.searchSort = "datecreate";
            $scope.searchSort = "name";
            $scope.searchSort = "searchText";
        }, function myError(response) {
            $scope.list = response.statusText;
        });
    });
</script>

