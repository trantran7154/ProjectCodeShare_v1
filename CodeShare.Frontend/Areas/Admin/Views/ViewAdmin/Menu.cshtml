                        <span class="pcoded-micon"><i class="fa fa-code"></i><b>D</b></span>
                        <span class="pcoded-mtext">Quản lý Code</span>
                        <span class="pcoded-mcaret"></span>
                    </a>
                </li>
                <li class="@(ViewBag.Title == "Thêm code" ? "active" : "")">
                    <a href="/Admin/CodesAdmin/Create" class="waves-effect waves-dark">
                        <span class="pcoded-micon"><i class="fa fa-code-fork"></i><b>D</b></span>
                        <span class="pcoded-mtext">Thêm code</span>
                        <span class="pcoded-mcaret"></span>
                    </a>
                </li>
                <li>
                    <hr />
                </li>
                <li class="@(ViewBag.Title == "Quản lý người dùng" || ViewBag.Title == "Thêm người dùng" || ViewBag.Title == "Sửa thông tin người dùng" || ViewBag.Title == "Thông tin code" || ViewBag.Title == "Thùng rác Code"  ? "active" : "")">
