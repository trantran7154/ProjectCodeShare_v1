                <li class="@(ViewBag.Title == "Trang chủ" ? "active" : "")">
                    <a href="/Admin/HomeAdmin/Index" class="waves-effect waves-dark">
                        <span class="pcoded-micon"><i class="ti-home"></i><b>D</b></span>
                        <span class="pcoded-mtext">Trang chủ</span>
                        <span class="pcoded-mcaret"></span>
                    </a>
                </li>
                <li>
                    <hr />
                </li>
                <li class="@(ViewBag.Title == "Quản lý code" || ViewBag.Title == "Sửa code" || ViewBag.Title == "Thông tin code" || ViewBag.Title == "Thùng rác Code"  ? "active" : "")">
