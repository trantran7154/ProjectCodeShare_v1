@using CodeShare.Model.EF 
@model CodeShare.Model.EF.TakePrice

@{
    ViewBag.Title = "Thông tin tài khoản rút tiền";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-xl-12 col-md-12">
    <div class="card table-card">
        <div class="card-header">
            <h5>@ViewBag.Title</h5>
            <div class="card-header-right">
                <a href="/Admin/TakePricesAdmin/Index" class="font-weight-bold mr-4">
                    <i class="fa fa-long-arrow-left text-primary"></i>TRỞ VỀ
                </a>
            </div>
        </div>
        <div class="card-block container-fluid">
            <div class="table-responsive">
                <form method="post" action="@Url.Action("Details","TakePricesAdmin", new { id = Model.tp_id })" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div class="modal-body">
                        <div class="ui form">
                            <div class="two fields">
                                <div class="field">
                                    <label><i class="fa fa-user"></i> Tên Người Rút Tiền</label>
                                    <input type="text" value="@Model.User.user_name" />
                                </div>
                                <div class="field">
                                    <label><i class="fa fa-money"></i> Số Tiền Rút</label>
                                    <input type="text" value="@Model.tp_coin Xu" />
                                </div>
                            </div>
                            <div class="two fields">
                                <div class="field">
                                    <label><i class="fa fa-calendar"></i> Ngày Tạo</label>
                                    <input type="text" value="@Model.tp_datecreate.Value.ToShortDateString()" />
                                </div>
                                <div class="field">
                                    <label><i class="fa fa-credit-card-alt"></i> Số Tài Khoản</label>
                                    <input type="text" value="@Model.tp_accountnumber" />
                                </div>
                            </div>
                            <div class="two fields">
                                <div class="field">
                                    <label><i class="fa fa-user-circle-o"></i> Tên Khách Hàng</label>
                                    <input type="text" value="@Model.tp_customer" />
                                </div>
                                <div class="field">
                                    <label><i class="fa fa-phone"></i> Số Điện Thoại MoMo</label>
                                    <input type="text" value="@Model.tp_momo" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
