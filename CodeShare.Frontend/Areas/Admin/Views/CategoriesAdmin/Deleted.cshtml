@using CodeShare.Model.EF
@model IEnumerable<CodeShare.Model.EF.Category>

@{
    ViewBag.Title = "Thùng rác";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    DataShareCodeEntities db = new DataShareCodeEntities();
}

@{ 
    List<Category> cate = db.Categorys.ToList();
}

<link href="~/Content/LayoutAdmin/css/switchIOS.css" rel="stylesheet" />

<div class="col-xl-12 col-md-12" ng-app="myApp">
    <div class="card table-card container-fluid" ng-controller="myCtrl">
        <div class="card-header">
            <h5>@ViewBag.Title</h5>
            <div class="card-header-right">
                <a href="/Admin/CategoriesAdmin/Index" class="font-weight-bold mr-4">
                    <i class="fa fa-long-arrow-left text-primary"></i>TRỞ VỀ
                </a>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-9">
                    <h4 class="mt-3">TÌM KIẾM NÂNG CAO</h4>
                    <table class="mb-5 mt-3">
                        <tr class="two fields">
                            <td class="field">
                                <label class="font-weight-bold">Tìm kiếm: </label>
                                <div class="ui icon input" style="width: 250px">
                                    <input type="text" placeholder="VD: Website..." ng-model="searchText">
                                    <i class="inverted circular search link icon"></i>
                                </div>
                            </td>
                            <td class="field">
                                <label class="ml-3 font-weight-bold">Danh mục: </label>
                                <select class="ui dropdown" ng-model="searchCate">
                                    <option value="">Tất cả</option>
                                    @foreach (var item in cate)
                                    {
                                        <option>@item.category_name</option>
                                    }
                                </select>
                            </td>
                            <td class="field">
                                <label class="ml-3 font-weight-bold">Tình trạng: </label>
                                <select class="ui search dropdown" ng-model="searchFull.active">
                                    <option value="">Tất cả</option>
                                    <option value="true">Hoạt động</option>
                                    <option value="false">Không hoạt động</option>
                                </select>
                            </td>
                            <td class="field">
                                <label class="ml-3 font-weight-bold">Sắp xếp theo: </label>
                                <select class="ui dropdown" ng-model="searchSort">
                                    <option value="searchText">Sắp xếp mặc định</option>
                                    <option value="searchText">Mặc định</option>
                                    <option value="name">Chữ cái</option>
                                    <option value="datecreate">Cũ nhất</option>
                                    <option value="searchText">Mới nhất</option>
                                </select>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="card-block">
            <div class="table-responsive container-fluid">
                <table class="table table-bordered text-center">
                    <tr>
                        <th class="font-weight-bold">
                            Ảnh
                        </th>
                        <th class="font-weight-bold">
                            Tên Danh Mục
                        </th>
                        <th class="font-weight-bold">
                            Thuộc Danh Mục
                        </th>
                        <th class="font-weight-bold">
                            Ngày Tạo
                        </th>
                        <th class="font-weight-bold" width="120">
                            Hoạt Động
                        </th>
                        <th class="font-weight-bold">
                            Công Cụ
                        </th>
                    </tr>
                    <tbody ng-show="(list | filter:searchText).length != 0">
                        <tr ng-repeat="list in list | filter: searchText | orderBy: searchSort | filter: searchCate | filter: searchFull">
                            <td class="font-weight-bold" width="200">
                                <img src="~/Images/Categorys/{{list.img}}" width="100" height="90" />
                            </td>
                            <td class="font-weight-bold" width="300">{{list.name}}</td>
                            <td class="font-weight-bold">
                                <div ng-show="list.item == 1">Code</div>
                                <div ng-show="list.item == 2">Tin tức</div>
                            </td>
                            <td>{{list.datecreate}}</td>
                            <td class="font-weight-bold" width="200">
                                <div ng-show="list.active == true">
                                    <label ontouchstart="" class="ios-switch">
                                        <input type="checkbox" ng-click="active(list.id)" id="checkbox" name="my-checkbox" checked>
                                        <span>
                                            <span class="ios-switch-inlay"></span>
                                            <span class="ios-switch-knob"></span>
                                        </span>
                                    </label>
                                </div>
                                <div ng-show="list.active == false">
                                    <label ontouchstart="" class="ios-switch">
                                        <input type="checkbox" ng-click="active(list.id)" id="checkbox" name="my-checkbox">
                                        <span>
                                            <span class="ios-switch-inlay"></span>
                                            <span class="ios-switch-knob"></span>
                                        </span>
                                    </label>
                                </div>
                            </td>
                            <td width="110">
                                <a ng-click="restore(list.id)"><i class="fa fa-refresh" style="font-size: 16px"></i></a>
                            </td>
                            <!-- Success modal -->
                            <td class="modal" tabindex="-1" id="check">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-body text-center font-18">
                                            <h3 class="mb-20">Duyệt Thành Công</h3>
                                            <div class="mb-30 text-center">
                                                <img src="~/Images/Modal/checked.png" />
                                            </div>
                                            <h6 class="mt-2">Tài khoản <b class="text-danger">{{list.user_email}}</b> đã rút tiền thành công!</h6>
                                        </div>
                                        <div class="modal-footer justify-content-center">
                                            <button type="button" class="btn btn-primary" data-dismiss="modal">OK</button>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <!-- Success modal -->
                            <td class="modal" tabindex="-1" id="bin">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-body text-center font-18">
                                            <h3 class="mb-20">Hủy Thành Công</h3>
                                            <div class="mb-30 text-center">
                                                <img src="~/Images/Modal/checked.png" />
                                            </div>
                                            <h6 class="mt-2">Tài khoản <b class="text-danger">{{list.user_email}}</b> đã rút tiền không thành công!</h6>
                                        </div>
                                        <div class="modal-footer justify-content-center">
                                            <button type="button" class="btn btn-primary" data-dismiss="modal">OK</button>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                    <tbody ng-show="(list | filter:searchText).length == 0">
                        <tr>
                            <th colspan="6" class="text-center font-weight-bold"><i class="fa fa-ban" style="color: red"></i> CHƯA CÓ DỮ LIỆU</th>
                        </tr>
                    </tbody>
                </table>
                <!-- Success modal -->
                <div class="modal" tabindex="-1" id="bin">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-body text-center font-18">
                                <h3 class="mb-20">Khôi Phục Thành Công</h3>
                                <div class="mb-30 text-center">
                                    <img src="~/Images/Modal/checked.png" />
                                </div>
                                <h6 class="mt-2">Dữ liệu đã được cập nhật!</h6>
                            </div>
                            <div class="modal-footer justify-content-center">
                                <button type="button" class="btn btn-primary" data-dismiss="modal">OK</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    var app = angular.module('myApp', []);
    app.controller('myCtrl', function ($scope, $http) {
        $http({
            method: "GET",
            url: "/Admin/CategoriesAdmin/DeletedCategories"
        }).then(function mySuccess(response) {
            $scope.list = response.data;
        }, function myError(response) {
            $scope.list = response.statusText;
        });
        // Restore
        $scope.restore = function (id) {
            $http.get("/Admin/CategoriesAdmin/Restore?id=" + id)
                .then(function (response) {
                    $scope.list = response.data;
                    $(document).ready(function () {
                        $('#bin').modal('show');
                    })
                });
        }
    });
</script>



