@model CodeShare.Model.EF.Category

@{
    ViewBag.Title = "Sửa thông tin danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-xl-12 col-md-12">
    <div class="card table-card container-fluid">
        <div class="card-header">
            <h5>@ViewBag.Title</h5>
            <div class="card-header-right">
                <a href="/Admin/CategoriesAdmin/Index" class="font-weight-bold mr-4">
                    <i class="fa fa-long-arrow-left text-primary"></i>TRỞ VỀ
                </a>
            </div>
        </div>
        <div class="card-block container-fluid">
            <div class="table-responsive">
                <form method="post" action="@Url.Action("Edit","CategoriesAdmin", new { id = Model.category_id })" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <input type="hidden" value="@Model.category_id" name="category_id" />
                    <input type="hidden" value="@Model.category_datecreate" name="category_datecreate" />
                    <input type="hidden" value="@Model.category_img" name="category_img" />

                    <div class="modal-body">
                        <div class="ui form">
                            <div class="two fields">
                                <div class="field">
                                    <label><i class="fa fa-image"></i> Ảnh</label>
                                    <input type="file" value="@Model.category_img" name="img" />
                                </div>
                            </div>
                            <div class="two fields">
                                <div class="field">
                                    <label><i class="fa fa-th-list"></i> Tên danh mục</label>
                                    <input type="text" value="@Model.category_name" name="category_name" />
                                </div>
                                <div class="field">
                                    <label><i class="fa fa-th-list"></i> Thuộc danh mục</label>
                                    <select class="ui fluid dropdown" name="category_item">
                                        <option value="1" @(Model.category_item == 1 ? "selected" : "")>Code</option>
                                        <option value="2" @(Model.category_item == 2 ? "selected" : "")>Tin tức</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="actions modal-footer">
                        <button type="submit" class="ui positive right labeled icon button">
                            Sửa
                            <i class="checkmark icon"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

