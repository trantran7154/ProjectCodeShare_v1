@using CodeShare.Model.EF
@model CodeShare.Model.EF.Pakage

@{
    ViewBag.Title = "Thông tin gói nạp xu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    DataShareCodeEntities db = new DataShareCodeEntities();

    var coin = Model.pakage_coin * 1000;
}

<div class="col-xl-12 col-md-12">
    <div class="card table-card">
        <div class="card-header">
            <h5>@ViewBag.Title</h5>
            <div class="card-header-right">
                <a href="/Admin/PakagesAdmin/Index" class="font-weight-bold mr-4">
                    <i class="fa fa-long-arrow-left text-primary"></i>TRỞ VỀ
                </a>
            </div>
        </div>
        <div class="card-block container-fluid">
            <div class="table-responsive">
                <form method="post" action="@Url.Action("Details","PakagesAdmin")" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div class="modal-body">
                        <div class="ui form">
                            <div class="fields two">
                                <div class="field">
                                    <label><i class="fa fa-pencil-square-o font-weight-bold"></i> Gói nạp xu</label>
                                    <input type="text" value="@Model.pakage_coin Xu" name="pakage_coin" />
                                </div>
                                <div class="field">
                                    <label><i class="fa fa-money"></i> Mệnh giá nạp xu</label>
                                    <input type="text" value="@coin.Value.ToString("#,##0") VNĐ" name="pakage_coin" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>