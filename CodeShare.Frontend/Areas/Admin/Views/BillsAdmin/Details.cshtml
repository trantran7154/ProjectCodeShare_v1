@using CodeShare.Model.EF
@model CodeShare.Model.EF.Bill

@{
    ViewBag.Title = "Thông tin hóa đơn";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    DataShareCodeEntities db = new DataShareCodeEntities();
}

<div class="col-xl-12 col-md-12">
    <div class="card table-card">
        <div class="card-header">
            <h5>@ViewBag.Title</h5>
            <div class="card-header-right">
                <a href="/Admin/BillsAdmin/Index" class="font-weight-bold mr-4">
                    <i class="fa fa-long-arrow-left text-primary"></i>TRỞ VỀ
                </a>
            </div>
        </div>
        <div class="card-block">
            <div class="table-responsive container-fluid">
                <form method="post" action="@Url.Action("Details","UsersAdmin",new { id = Model.user_id })" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div class="modal-body">
                        <div class="ui form">
                            <div class="two fields">
                                <div class="field">
                                    <label><i class="fa fa-user"></i> Tên người mua</label>
                                    <input type="text" value="@Model.User.user_name" />
                                </div>
                                <div class="field">
                                    <label><i class="fa fa-key"></i> Giá</label>
                                    <input type="text" value="@Model.Pakage.pakage_coin Xu" />
                                </div>
                            </div>
                            <div class="two fields">
                                <div class="field">
                                    <label><i class="fa fa-calculator"></i> Ngày tạo</label>
                                    <input type="text" value="@Model.bill_datecreate.Value.ToShortDateString()" />
                                </div>
                                <div class="field">
                                    <label><i class="fa fa-history"></i> Ngày hết hạn</label>
                                    <input type="text" value="@Model.bill_dealine.Value.ToShortDateString()" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

