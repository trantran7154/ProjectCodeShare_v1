@using CodeShare.Model;
@model CodeShare.Model.EF.Banner

@{
    ViewBag.Title = "Sửa thông tin banner";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-xl-12 col-md-12">
    <div class="card table-card">
        <div class="card-header">
            <h5>@ViewBag.Title</h5>
            <div class="card-header-right">
                <a href="/Admin/BannersAdmin/Index" class="font-weight-bold mr-4">
                    <i class="fa fa-long-arrow-left text-primary"></i>TRỞ VỀ
                </a>
            </div>
        </div>
        <div class="card-block container-fluid">
            <div class="table-responsive">
                <form method="post" class="ui form" action="@Url.Action("Edit","BannersAdmin", new { id = Model.banner_id })" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <input type="hidden" value="@Model.banner_id" name="banner_id" />
                    <input type="hidden" value="@Model.banner_datecreate" name="banner_datecreate" />
                    <input type="hidden" value="@Model.banner_image" name="banner_image" />

                    <div class="modal-body">
                        <div class="ui form">
                            <div class="two fields">
                                <div class="field">
                                    <label><i class="fa fa-image"></i> Ảnh</label>
                                    <input type="file" value="@Model.banner_image" name="img" />
                                </div>
                                <div class="field">
                                    <label><i class="fa fa-pencil"></i> Tên banner</label>
                                    <input type="text" value="@Model.banner_title" name="banner_title">
                                </div>
                            </div>
                            <div class="two fields">
                                <div class="field">
                                    <label><i class="fa fa-link"></i> Link banner</label>
                                    <input type="text" value="@Model.banner_link" name="banner_link" />
                                </div>
                            </div>
                            <div class="ui error message"></div>
                        </div>
                    </div>
                    <div class="actions modal-footer">
                        <button type="submit" class="ui positive right labeled icon button">
                            Sửa
                            <i class="checkmark icon"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>