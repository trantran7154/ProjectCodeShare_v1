    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.banner_title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.banner_image)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.banner_link)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.banner_datecreate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.banner_active)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.banner_id }) |
